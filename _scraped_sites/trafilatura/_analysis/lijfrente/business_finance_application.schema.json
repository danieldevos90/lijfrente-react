{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "BusinessFinanceApplicationMinimal",
  "type": "object",
  "required": [
    "amount_requested_eur",
    "expected_revenue_next_12m_eur",
    "use_of_funds"
  ],
  "anyOf": [
    { "required": ["kvk_number"] },
    { "required": ["company_name"] }
  ],
  "properties": {
    "amount_requested_eur": { "type": "number", "minimum": 1000 },
    "expected_revenue_next_12m_eur": { "type": "number", "minimum": 0 },
    "kvk_number": { "type": "string", "pattern": "^[0-9]{8}$" },
    "company_name": { "type": "string", "minLength": 2 },
    "use_of_funds": {
      "type": "string",
      "enum": [
        "werkkapitaal",
        "voorraden_en_crediteuren",
        "meer_personeel",
        "voertuigen_en_machines",
        "inventaris_en_software",
        "bedrijfspand_financieren",
        "herfinanciering",
        "overnamefinanciering",
        "factoring",
        "overig"
      ]
    },
    "notes": { "type": "string", "maxLength": 2000 },
    "contact_email": { "type": "string", "format": "email" },
    "contact_phone": { "type": "string", "pattern": "^[0-9+()\\s-]{6,20}$" },
    "attachments": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["type", "filename"],
        "properties": {
          "type": { "type": "string", "enum": ["bank_statements", "memorandum", "tax_return", "other"] },
          "filename": { "type": "string" },
          "url": { "type": "string", "format": "uri" }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}


